---
// src/components/astro/Testimonial.astro
interface Props {
  quote: string;
  author: string;
  role: string;
  company: string;
  image?: string;
  rating?: number;
}

const {
  quote,
  author,
  role,
  company,
  image,
  rating = 5,
} = Astro.props;
---

<div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow border border-slate-100">
  <!-- Rating -->
  <div class="flex gap-1 mb-4">
    {Array.from({ length: rating }).map(() => (
      <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>
    ))}
  </div>
  
  <!-- Quote -->
  <blockquote class="text-slate-700 mb-6 italic text-lg leading-relaxed">
    "{quote}"
  </blockquote>
  
  <!-- Author -->
  <div class="flex items-center gap-4">
    {image ? (
      <img 
        src={image} 
        alt={author}
        class="w-12 h-12 rounded-full object-cover"
      />
    ) : (
      <div class="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center">
        <span class="text-blue-600 font-bold text-lg">
          {author.charAt(0)}
        </span>
      </div>
    )}
    
    <div>
      <div class="font-bold text-slate-900">{author}</div>
      <div class="text-sm text-slate-600">
        {role} Â· {company}
      </div>
    </div>
  </div>
</div>