---
// src/components/astro/Header.astro
import { Menu, X }  from '@lucide/astro';

const navLinks = [
  { text: "Servicios", href: "/servicios" },
  { text: "Demo", href: "/demo" },
  { text: "Calculadora ROI", href: "/calculadora-roi" },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-white/90 backdrop-blur-lg border-b border-slate-200 shadow-sm">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <a href="/" class="flex items-center gap-2 font-bold text-xl text-blue-600 hover:text-blue-700 transition-colors">
        <img src="/logo.svg" width="32" height="32" alt="Ir a la página de inicio" class="h-8 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`text-slate-600 hover:text-blue-600 font-medium transition-colors relative ${
              currentPath === link.href ? "text-blue-600" : ""
            }`}
          >
            {link.text}
            {currentPath === link.href && (
              <span 
                class="absolute -bottom-[17px] left-0 right-0 h-0.5 bg-blue-600"
                style="view-transition-name: active-nav-indicator;"
              />
            )}
          </a>
        ))}
        <a
          href="/contacto"
          data-astro-reload
          class="px-6 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-all shadow-sm hover:shadow-md"
        >
          Contacto
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-slate-600 hover:text-blue-600 transition-colors relative"
        aria-label="Menú"
        aria-expanded="false"
      >
        <!-- Ícono hamburguesa -->
        <span id="menu-icon" class="block transition-opacity duration-200">
          <Menu class="w-6 h-6" />
        </span>
        <!-- Ícono X -->
        <span id="close-icon" class="absolute inset-0 flex items-center justify-center opacity-0 transition-opacity duration-200">
          <X class="w-6 h-6" />
        </span>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-3">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`px-4 py-2 text-slate-600 hover:text-blue-600 hover:bg-slate-50 rounded-lg font-medium transition-all ${
              currentPath === link.href ? "text-blue-600 bg-slate-50" : ""
            }`}
          >
            {link.text}
          </a>
        ))}
        <a
          href="/contacto"
          data-astro-reload
          class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-all text-center"
        >
          Contacto
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Función para inicializar el menú
  function initMobileMenu() {
    const button = document.getElementById("mobile-menu-button");
    const menu = document.getElementById("mobile-menu");
    const menuIcon = document.getElementById("menu-icon");
    const closeIcon = document.getElementById("close-icon");
    
    if (!button || !menu || !menuIcon || !closeIcon) return;
    
    // Remover listeners previos clonando el botón
    const newButton = button.cloneNode(true) as HTMLElement;
    const parent = button.parentNode;
    if (parent) {
      parent.replaceChild(newButton, button);
    }
    
    // Obtener los íconos del nuevo botón
    const newMenuIcon = newButton.querySelector("#menu-icon") as HTMLElement;
    const newCloseIcon = newButton.querySelector("#close-icon") as HTMLElement;
    
    if (!newMenuIcon || !newCloseIcon) return;
    
    // Añadir nuevo listener
    newButton.addEventListener("click", () => {
      const isExpanded = newButton.getAttribute("aria-expanded") === "true";
      const willExpand = !isExpanded;
      
      // Actualizar aria-expanded
      newButton.setAttribute("aria-expanded", willExpand.toString());
      
      // Toggle menú
      menu.classList.toggle("hidden");
      
      // Animar íconos
      if (willExpand) {
        // Mostrar X, ocultar hamburguesa
        newMenuIcon.style.opacity = "0";
        newCloseIcon.style.opacity = "1";
      } else {
        // Mostrar hamburguesa, ocultar X
        newMenuIcon.style.opacity = "1";
        newCloseIcon.style.opacity = "0";
      }
    });
  }

  // Inicializar al cargar la página
  document.addEventListener('astro:page-load', initMobileMenu);
  
  // También inicializar en carga inicial (sin view transitions)
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMobileMenu);
  } else {
    initMobileMenu();
  }
</script>