---
// src/pages/reformas/index.astro
import BaseLayout from "../../layouts/BaseLayout.astro";
import barriosData from "../../data/barrios-madrid.json";
import {
  Flame,
  Star,
  TrendingUp,
  ArrowRight,
  ChevronRight,
  Map,
  MapPin,
  Euro,
  FileText,
  Target,
} from "@lucide/astro";

// Configuración de badges de demanda
const demandaConfig = {
  "muy-alta": {
    label: "Muy Alta",
    icon: Flame,
    bgColor: "bg-red-100",
    textColor: "text-red-700",
  },
  alta: {
    label: "Alta",
    icon: Star,
    bgColor: "bg-orange-100",
    textColor: "text-orange-700",
  },
  "media-alta": {
    label: "Media-Alta",
    icon: TrendingUp,
    bgColor: "bg-yellow-100",
    textColor: "text-yellow-700",
  },
  media: {
    label: "Media",
    icon: ArrowRight,
    bgColor: "bg-green-100",
    textColor: "text-green-700",
  },
};
---

<BaseLayout
  title="Webs para Empresas de Reformas por Zona en Madrid"
  description="Desarrollo web especializado para empresas de reformas por zonas de Madrid. Sistema de captación con SEO local para Barrio Salamanca, Chamartín, Pozuelo y más."
>
  <!-- Hero -->
  <section class="relative overflow-hidden bg-linear-to-br from-blue-600 to-blue-900 text-white py-16">
    <div class="absolute inset-0 bg-[url('/images/cimientos-web-bg@x2.png')] bg-cover bg-no-repeat opacity-10"></div>
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl lg:text-5xl font-bold mb-6">
        Webs para Reformas por Zona en Madrid
      </h1>
      <p class="text-xl text-blue-100">
        Selecciona tu zona principal de operación para ver información
        específica del mercado
      </p>
    </div>
  </section>

  <!-- Listado de barrios -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          barriosData.barrios.map((barrio) => {
            const demandaInfo = demandaConfig[barrio.demanda];
            const DemandaIcon = demandaInfo.icon;

            return (
              <a
                href={`/reformas/${barrio.slug}`}
                class="group bg-white rounded-xl p-6 shadow-sm hover:shadow-xl transition-all border-2 border-slate-100 hover:border-blue-300"
              >
                <div class="flex justify-between items-start mb-4">
                  <div>
                    <h3 class="text-xl font-bold text-slate-900 group-hover:text-blue-600 transition-colors mb-1">
                      {barrio.nombre}
                    </h3>
                    <div class="text-sm text-slate-600">{barrio.zona}</div>
                  </div>
                  <div
                    class={`flex items-center gap-1.5 text-xs font-semibold px-3 py-1 rounded-full ${demandaInfo.bgColor} ${demandaInfo.textColor}`}
                  >
                    <DemandaIcon class="w-3.5 h-3.5" />
                    <span>{demandaInfo.label}</span>
                  </div>
                </div>

                <p class="text-slate-600 text-sm mb-4">
                  {barrio.descripcion.substring(0, 120)}...
                </p>

                <div class="flex justify-between items-center text-sm">
                  <div>
                    <div class="text-slate-500 text-xs">Ticket medio</div>
                    <div class="font-bold text-blue-600">
                      {Number(barrio.ticketMedio).toLocaleString("es-ES")}€
                    </div>
                  </div>
                  <div class="flex items-center gap-1 text-blue-600 group-hover:translate-x-1 transition-transform">
                    <span>Ver más</span>
                    <ChevronRight class="w-4 h-4" />
                  </div>
                </div>
              </a>
            );
          })
        }
      </div>
    </div>
  </section>

  <!-- Mapa de Madrid -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">
          Cobertura en toda la Comunidad de Madrid
        </h2>
        <p class="text-xl text-slate-600">
          Especializados en zonas de alto valor
        </p>
      </div>

      <!-- Mapa con iframe -->
      <div
        class="relative rounded-2xl overflow-hidden shadow-2xl"
        style="height: 500px;"
      >
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d194347.90536788172!2d-3.8196207!3d40.4167754!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd422997800a3c81%3A0xc436dec1618c2269!2sMadrid!5e0!3m2!1ses!2ses!4v1234567890123!5m2!1ses!2ses"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Mapa de zonas de reformas en Madrid"
        >
        </iframe>

        <!-- Overlay con información de zonas -->
        <div
          class="absolute bottom-4 left-4 bg-white/95 backdrop-blur-sm rounded-lg shadow-xl p-4 text-sm max-w-xs"
        >
          <div class="font-bold text-slate-900 mb-3 flex items-center gap-2">
            <svg
              class="w-5 h-5 text-blue-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Zonas Premium
          </div>
          <div class="space-y-2 text-xs">
            <div class="flex items-center justify-between">
              <span class="text-slate-600">Salamanca, Chamartín</span>
              <span
                class="px-2 py-0.5 bg-red-100 text-red-700 rounded-full font-semibold"
                >Muy Alta</span
              >
            </div>
            <div class="flex items-center justify-between">
              <span class="text-slate-600">Chamberí, Retiro</span>
              <span
                class="px-2 py-0.5 bg-orange-100 text-orange-700 rounded-full font-semibold"
                >Alta</span
              >
            </div>
            <div class="flex items-center justify-between">
              <span class="text-slate-600">Pozuelo, Las Rozas</span>
              <span
                class="px-2 py-0.5 bg-yellow-100 text-yellow-700 rounded-full font-semibold"
                >Media-Alta</span
              >
            </div>
          </div>
          <div class="mt-3 pt-3 border-t border-slate-200">
            <div class="text-xs text-slate-500">Ticket medio zona</div>
            <div class="text-lg font-bold text-blue-600">60-120k€</div>
          </div>
        </div>
      </div>
      <div class="grid md:grid-cols-4 gap-6 mt-12">
        <div class="text-center">
          <div class="flex items-center justify-center gap-2 mb-2">
            <MapPin class="w-6 h-6 text-blue-600" />
            <div class="text-3xl font-bold text-blue-600">10+</div>
          </div>
          <div class="text-sm text-slate-600">Zonas Premium</div>
        </div>
        <div class="text-center">
          <div class="flex items-center justify-center gap-2 mb-2">
            <Euro class="w-6 h-6 text-blue-600" />
            <div class="text-3xl font-bold text-blue-600">75k€</div>
          </div>
          <div class="text-sm text-slate-600">Ticket medio</div>
        </div>
        <div class="text-center">
          <div class="flex items-center justify-center gap-2 mb-2">
            <FileText class="w-6 h-6 text-blue-600" />
            <div class="text-3xl font-bold text-blue-600">50+</div>
          </div>
          <div class="text-sm text-slate-600">Landing pages SEO</div>
        </div>
        <div class="text-center">
          <div class="flex items-center justify-center gap-2 mb-2">
            <Target class="w-6 h-6 text-blue-600" />
            <div class="text-3xl font-bold text-blue-600">100%</div>
          </div>
          <div class="text-sm text-slate-600">Cobertura Madrid</div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-linear-to-br from-blue-600 to-blue-900 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl lg:text-4xl font-bold mb-6">
        ¿Operas en alguna de estas zonas?
      </h2>
      <p class="text-xl text-blue-100 mb-8">
        Te muestro cómo captar clientes cualificados de tu zona específica
      </p>
      <a
        href="/contacto"
        class="inline-flex items-center justify-center px-8 py-4 bg-yellow-400 hover:bg-yellow-300 text-blue-900 font-bold rounded-lg transition-all shadow-xl text-lg group"
      >
        Solicitar Demo de Mi Zona
        <ChevronRight
          class="w-6 h-6 ml-2 group-hover:translate-x-1 transition-transform"
        />
      </a>
    </div>
  </section>
</BaseLayout>
