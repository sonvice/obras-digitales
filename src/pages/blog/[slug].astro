---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog', ({ data }) => {
    return data.draft !== true;
  });
  
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Schema para Article
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": entry.data.title,
  "description": entry.data.description,
  "image": entry.data.image ? `https://obrasdigitales.es${entry.data.image}` : undefined,
  "datePublished": entry.data.pubDate.toISOString(),
  "dateModified": entry.data.updatedDate?.toISOString() || entry.data.pubDate.toISOString(),
  "author": {
    "@type": "Organization",
    "name": entry.data.author,
    "url": "https://obrasdigitales.es"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Obras Digitales",
    "logo": {
      "@type": "ImageObject",
      "url": "https://obrasdigitales.es/logo.svg"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://obrasdigitales.es/blog/${entry.slug}`
  }
};

// BreadcrumbList Schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Inicio",
      "item": "https://obrasdigitales.es"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Blog",
      "item": "https://obrasdigitales.es/blog"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": entry.data.title,
      "item": `https://obrasdigitales.es/blog/${entry.slug}`
    }
  ]
};

// Obtener posts relacionados (mismo tag)
const allPosts = await getCollection('blog', ({ data }) => data.draft !== true);
const relatedPosts = allPosts
  .filter(post => 
    post.slug !== entry.slug && 
    post.data.tags.some(tag => entry.data.tags.includes(tag))
  )
  .slice(0, 3);
---

<BaseLayout
  title={entry.data.title}
  description={entry.data.description}
  keywords={entry.data.tags.join(', ')}
  ogImage={entry.data.image}
  schema={articleSchema}
>
  <!-- Breadcrumb Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <article class="py-12 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb Navigation -->
      <nav class="mb-8 text-sm text-slate-600" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2">
          <li><a href="/" class="hover:text-blue-600">Inicio</a></li>
          <li><span>›</span></li>
          <li><a href="/blog" class="hover:text-blue-600">Blog</a></li>
          <li><span>›</span></li>
          <li class="text-slate-900 font-medium">{entry.data.title}</li>
        </ol>
      </nav>

      <!-- Article Header -->
      <header class="mb-8">
        <div class="flex flex-wrap gap-2 mb-4">
          {entry.data.tags.map(tag => (
            <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-medium">
              {tag}
            </span>
          ))}
        </div>

        <h1 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-4 leading-tight">
          {entry.data.title}
        </h1>

        <p class="text-xl text-slate-600 mb-6">
          {entry.data.description}
        </p>

        <div class="flex items-center gap-6 text-sm text-slate-600 pb-6 border-b border-slate-200">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <time datetime={entry.data.pubDate.toISOString()}>
              {entry.data.pubDate.toLocaleDateString('es-ES', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </time>
          </div>
          
          {entry.data.readingTime && (
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>{entry.data.readingTime} de lectura</span>
            </div>
          )}

          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            <span>{entry.data.author}</span>
          </div>
        </div>
      </header>

      <!-- Featured Image -->
      {entry.data.image && (
        <div class="mb-12">
          <img 
            src={entry.data.image} 
            alt={entry.data.imageAlt || entry.data.title}
            class="w-full rounded-2xl shadow-lg"
          />
        </div>
      )}

      <!-- Article Content - VERSIÓN PARA TAILWIND V4 (sin @apply) -->
      <div class="article-content">
        <Content />
      </div>

      <!-- Article Footer / Share -->
      <footer class="mt-12 pt-8 border-t border-slate-200">
        <div class="flex items-center justify-between flex-wrap gap-4">
          <div>
            <p class="text-sm text-slate-600 mb-2">Comparte este artículo:</p>
            <div class="flex gap-3">
              <a 
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(entry.data.title)}&url=${encodeURIComponent(`https://obrasdigitales.es/blog/${entry.slug}`)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="p-2 bg-slate-100 rounded-lg hover:bg-slate-200 transition-colors"
                aria-label="Compartir en Twitter"
              >
                <svg class="w-5 h-5 text-slate-700" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
              <a 
                href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://obrasdigitales.es/blog/${entry.slug}`)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="p-2 bg-slate-100 rounded-lg hover:bg-slate-200 transition-colors"
                aria-label="Compartir en LinkedIn"
              >
                <svg class="w-5 h-5 text-slate-700" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <a 
                href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(`https://obrasdigitales.es/blog/${entry.slug}`)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="p-2 bg-slate-100 rounded-lg hover:bg-slate-200 transition-colors"
                aria-label="Compartir en Facebook"
              >
                <svg class="w-5 h-5 text-slate-700" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            </div>
          </div>

          <a 
            href="/blog"
            class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-700"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12"/>
            </svg>
            Volver al blog
          </a>
        </div>
      </footer>
    </div>
  </article>

  <!-- CTA Section -->
  <section class="py-16 bg-linear-to-br from-blue-600 to-blue-900 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl lg:text-4xl font-bold mb-4">
        ¿Te gustaría una web como las que describimos?
      </h2>
      <p class="text-xl text-blue-100 mb-8">
        Agenda una demo personalizada y te mostramos cómo funcionaría con tu empresa
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/contacto"
          class="inline-flex items-center justify-center px-8 py-4 bg-yellow-400 text-blue-900 font-bold rounded-lg hover:bg-yellow-300 transition-all shadow-xl"
        >
          Solicitar Demo
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
        <a 
          href="/calculadora-roi"
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-blue-900 font-bold rounded-lg hover:bg-blue-50 transition-all"
        >
          Calcular mi ROI
        </a>
      </div>
    </div>
  </section>

  <!-- Related Posts -->
  {relatedPosts.length > 0 && (
    <section class="py-16 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-slate-900 mb-8">Artículos Relacionados</h2>
        
        <div class="grid md:grid-cols-3 gap-8">
          {relatedPosts.map(post => (
            <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              {post.data.image && (
                <a href={`/blog/${post.slug}`}>
                  <img 
                    src={post.data.image} 
                    alt={post.data.imageAlt || post.data.title}
                    class="w-full h-48 object-cover"
                  />
                </a>
              )}
              <div class="p-5">
                <h3 class="text-lg font-bold text-slate-900 mb-2 hover:text-blue-600 transition-colors line-clamp-2">
                  <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                </h3>
                
                <p class="text-slate-600 text-sm mb-3 line-clamp-2">
                  {post.data.description}
                </p>
                
                <a 
                  href={`/blog/${post.slug}`}
                  class="inline-flex items-center text-blue-600 text-sm font-semibold hover:text-blue-700"
                >
                  Leer más
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}
</BaseLayout>

<style is:global>

  .article-content {
    font-size: 1.125rem; 
    max-width: none;
  }

  /* Headings */
  .article-content h2 {
    font-size: 1.875rem; 
    font-weight: 700; 
    color: rgb(15 23 42); 
    margin-top: 3rem;
    margin-bottom: 1.5rem; 
    padding-bottom: 0.75rem; 
    border-bottom: 2px solid rgb(226 232 240); 
  }

  .article-content h3 {
    font-size: 1.5rem; 
    font-weight: 700; 
    color: rgb(15 23 42); 
    margin-top: 2rem; 
    margin-bottom: 1rem; 
  }

  .article-content h4 {
    font-size: 1.25rem;
    font-weight: 700; 
    color: rgb(15 23 42); 
    margin-top: 1.5rem; 
    margin-bottom: 0.75rem;
  }

  /* Paragraphs */
  .article-content p {
    color: rgb(51 65 85); 
    line-height: 1.75;
    margin-bottom: 1.5rem; 
  }

  /* Links */
  .article-content a {
    color: rgb(37 99 235); 
    font-weight: 600; 
    text-decoration: none;
    transition: color 0.2s;
  }

  .article-content a:hover {
    color: rgb(29 78 216); 
    text-decoration: underline;
  }

  /* Strong & Bold */
  .article-content strong,
  .article-content b {
    color: rgb(15 23 42); 
    font-weight: 700; 
  }

  /* Emphasis */
  .article-content em,
  .article-content i {
    font-style: italic;
  }

  /* Unordered Lists */
  .article-content ul {
    margin-top: 1.5rem; 
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem; 
  }

  .article-content ul li {
    color: rgb(51 65 85); 
    line-height: 1.75; 
    padding-left: 1.5rem; /* pl-6 */
    position: relative;
  }

  .article-content ul li::before {
    content: "•";
    position: absolute;
    left: 0;
    color: rgb(37 99 235);
    font-weight: 700; 
    font-size: 1.25rem; 
    top: 0;
  }

  /* Ordered Lists */
  .article-content ol {
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem; 
    list-style-type: decimal;
    list-style-position: inside;
  }

  .article-content ol li {
    color: rgb(51 65 85); 
    line-height: 1.75; 
  }

  /* Nested Lists */
  .article-content ul ul,
  .article-content ol ol,
  .article-content ul ol,
  .article-content ol ul {
    margin-top: 0.75rem;
    margin-bottom: 0;
  }

  /* Blockquotes */
  .article-content blockquote {
    border-left: 4px solid rgb(59 130 246); 
    background-color: rgb(239 246 255); 
    padding: 1rem 1.5rem; 
    border-radius: 0 0.5rem 0.5rem 0; 
    margin-top: 1.5rem; 
    margin-bottom: 1.5rem;
    font-style: italic;
  }

  .article-content blockquote p {
    margin-bottom: 0;
  }

  /* Inline Code */
  .article-content code {
    color: rgb(37 99 235); /* text-blue-600 */
    background-color: rgb(241 245 249); /* bg-slate-100 */
    padding: 0.25rem 0.5rem; /* px-2 py-1 */
    border-radius: 0.25rem; /* rounded */
    font-size: 0.875rem; /* text-sm */
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
  }

  /* Code Blocks */
  .article-content pre {
    background-color: rgb(15 23 42); /* bg-slate-900 */
    color: rgb(241 245 249); /* text-slate-100 */
    padding: 1rem; /* p-4 */
    border-radius: 0.5rem; /* rounded-lg */
    overflow-x: auto;
    margin-top: 1.5rem; /* my-6 */
    margin-bottom: 1.5rem;
  }

  .article-content pre code {
    background-color: transparent;
    color: rgb(241 245 249); /* text-slate-100 */
    padding: 0;
    font-size: 0.875rem; /* text-sm */
  }

  /* Images */
  .article-content img {
    border-radius: 0.75rem; /* rounded-xl */
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1); /* shadow-lg */
    margin-top: 2rem; /* my-8 */
    margin-bottom: 2rem;
    width: 100%;
  }

  /* Tables */
  .article-content table {
    width: 100%;
    margin-top: 1.5rem; /* my-6 */
    margin-bottom: 1.5rem;
    border-collapse: collapse;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1); /* shadow-md */
    border-radius: 0.5rem; /* rounded-lg */
    overflow: hidden;
  }

  .article-content thead {
    background-color: rgb(241 245 249); /* bg-slate-100 */
  }

  .article-content th {
    text-align: left;
    padding: 1rem; /* p-4 */
    font-weight: 700; 
    color: rgb(15 23 42); 
    border-bottom: 2px solid rgb(203 213 225); 
  }

  .article-content td {
    padding: 1rem; /* p-4 */
    border-bottom: 1px solid rgb(226 232 240); 
    color: rgb(51 65 85); 
  }

  .article-content tr:last-child td {
    border-bottom: 0;
  }

  .article-content tbody tr:hover {
    background-color: rgb(248 250 252); 
  }

  /* Horizontal Rules */
  .article-content hr {
    margin-top: 3rem;
    margin-bottom: 3rem;
    border-top: 2px solid rgb(226 232 240); 
  }

  /* Responsive Adjustments */
  @media (max-width: 640px) {
    .article-content {
      font-size: 1rem; 
    }
    
    .article-content h2 {
      font-size: 1.5rem; 
      margin-top: 2rem;
      margin-bottom: 1rem; 
    }
    
    .article-content h3 {
      font-size: 1.25rem;
      margin-top: 1.5rem; 
      margin-bottom: 0.75rem;
    }

    .article-content h4 {
      font-size: 1.125rem; 
      margin-top: 1rem; 
      margin-bottom: 0.5rem; 
    }
  }

  /* Line Clamp Utility */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
