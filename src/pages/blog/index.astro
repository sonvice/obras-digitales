---
// src/pages/blog/index.astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Ordenar por fecha más reciente
const sortedPosts = allPosts.sort((a, b) => 
  b.data.pubDate.getTime() - a.data.pubDate.getTime()
);

const featuredPosts = sortedPosts.filter(post => post.data.featured);
const regularPosts = sortedPosts.filter(post => !post.data.featured);
---

<BaseLayout
  title="Blog de Diseño Web para Empresas de Reformas | Obras Digitales"
  description="Consejos, guías y estrategias para empresas de reformas en Madrid. Aprende cómo conseguir más clientes, mejorar tu web y posicionarte en Google."
  keywords="blog reformas Madrid, marketing reformas, diseño web reformas, SEO reformas, conseguir clientes reformas"
>
  <!-- Hero Section -->
  <section class="bg-linear-to-br from-blue-600 via-blue-700 to-blue-900 text-white py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl lg:text-5xl font-bold mb-6">
        Blog de Obras Digitales
      </h1>
      <p class="text-xl text-blue-100">
        Guías prácticas, estrategias y consejos para empresas de reformas que quieren crecer online
      </p>
    </div>
  </section>

  <!-- Featured Posts -->
  {featuredPosts.length > 0 && (
    <section class="py-16 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center gap-3 mb-8">
          <svg class="w-6 h-6 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          <h2 class="text-3xl font-bold text-slate-900">Artículos Destacados</h2>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8">
          {featuredPosts.map(post => (
            <article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
              {post.data.image && (
                <a href={`/blog/${post.slug}`}>
                  <img 
                    src={post.data.image} 
                    alt={post.data.imageAlt || post.data.title}
                    class="w-full h-64 object-cover"
                  />
                </a>
              )}
              <div class="p-6">
                <div class="flex items-center gap-4 mb-3 text-sm text-slate-600">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.pubDate.toLocaleDateString('es-ES', { 
                      year: 'numeric', 
                      month: 'long', 
                      day: 'numeric' 
                    })}
                  </time>
                  {post.data.readingTime && (
                    <>
                      <span>•</span>
                      <span>{post.data.readingTime} lectura</span>
                    </>
                  )}
                </div>
                
                <h3 class="text-2xl font-bold text-slate-900 mb-3 hover:text-blue-600 transition-colors">
                  <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                </h3>
                
                <p class="text-slate-600 mb-4 line-clamp-3">
                  {post.data.description}
                </p>
                
                <div class="flex flex-wrap gap-2 mb-4">
                  {post.data.tags.slice(0, 3).map(tag => (
                    <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm">
                      {tag}
                    </span>
                  ))}
                </div>
                
                <a 
                  href={`/blog/${post.slug}`}
                  class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-700"
                >
                  Leer artículo completo
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Regular Posts -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-slate-900 mb-8">Todos los Artículos</h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {regularPosts.map(post => (
          <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            {post.data.image && (
              <a href={`/blog/${post.slug}`}>
                <img 
                  src={post.data.image} 
                  alt={post.data.imageAlt || post.data.title}
                  class="w-full h-48 object-cover"
                />
              </a>
            )}
            <div class="p-5">
              <div class="flex items-center gap-3 mb-2 text-xs text-slate-500">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('es-ES', { 
                    year: 'numeric', 
                    month: 'short', 
                    day: 'numeric' 
                  })}
                </time>
                {post.data.readingTime && (
                  <>
                    <span>•</span>
                    <span>{post.data.readingTime}</span>
                  </>
                )}
              </div>
              
              <h3 class="text-xl font-bold text-slate-900 mb-2 hover:text-blue-600 transition-colors line-clamp-2">
                <a href={`/blog/${post.slug}`}>{post.data.title}</a>
              </h3>
              
              <p class="text-slate-600 mb-3 text-sm line-clamp-2">
                {post.data.description}
              </p>
              
              <div class="flex flex-wrap gap-2">
                {post.data.tags.slice(0, 2).map(tag => (
                  <span class="px-2 py-1 bg-slate-100 text-slate-600 rounded text-xs">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-linear-to-br from-blue-600 to-blue-900 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl lg:text-4xl font-bold mb-4">
        ¿Listo para llevar tu empresa de reformas al siguiente nivel?
      </h2>
      <p class="text-xl text-blue-100 mb-8">
        Descubre cómo una web profesional puede transformar tu negocio
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/demo"
          class="inline-flex items-center justify-center px-8 py-4 bg-yellow-400 text-blue-900 font-bold rounded-lg hover:bg-yellow-300 transition-all shadow-xl"
        >
          Ver Demo en Vivo
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>
        <a 
          href="/calculadora-roi"
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-blue-900 font-bold rounded-lg hover:bg-blue-50 transition-all"
        >
          Calcular mi ROI
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
